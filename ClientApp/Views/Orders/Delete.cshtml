@model ClientApp.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="bg-gray-800 text-white p-4 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4">Delete Order</h1>
    <h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>Order</h4>
        <hr class="border-gray-600" />
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Model.Id</dd>
            <dt>Product Name</dt>
            <dd>@Model.ProductName</dd>
            <dt>Quantity</dt>
            <dd>@Model.Quantity</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-500 text-white p-2 rounded-md">Delete</button> |
        <a asp-action="Index" class="text-blue-500">Back to List</a>
    </form>
</div>
