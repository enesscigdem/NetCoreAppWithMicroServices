@model ClientApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form asp-action="Edit" method="post" class="space-y-4">
    <div>
        <label asp-for="Name" class="block">Name</label>
        <input asp-for="Name" class="border rounded-md p-2 w-full" />
        <span asp-validation-for="Name" class="text-red-500"></span>
    </div>
    <div>
        <label asp-for="Price" class="block">Price</label>
        <input asp-for="Price" class="border rounded-md p-2 w-full" />
        <span asp-validation-for="Price" class="text-red-500"></span>
    </div>
    <div>
        <button type="submit" class="bg-blue-500 text-white p-2 rounded-md">Save</button>
    </div>
</form>
