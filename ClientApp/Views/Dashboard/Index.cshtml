@{
    ViewData["Title"] = "Health Check Dashboard";
}

<div class="flex flex-col items-center justify-center mt-60 bg-gray-900 text-white">
    <h1 class="text-4xl font-bold mb-8">Health Check Dashboard</h1>
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
        <!-- Order Service Card -->
        <div class="bg-gray-800 rounded-lg p-6 shadow-lg w-full max-w-sm">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-2xl font-semibold">Order Service</h2>
                <div class="flex items-center">
                    <div class="h-3 w-3 rounded-full mr-2" style="background-color: @(ViewBag.OrderServiceStatus == "Up" ? "green" : "red")"></div>
                    <span>@ViewBag.OrderServiceStatus</span>
                </div>
            </div>
            <div class="mt-4">
                <div class="text-gray-400">Last Checked: @ViewBag.OrderServiceLastChecked</div>
            </div>
        </div>
        <!-- Product Service Card -->
        <div class="bg-gray-800 rounded-lg p-6 shadow-lg w-full max-w-sm">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-2xl font-semibold">Product Service</h2>
                <div class="flex items-center">
                    <div class="h-3 w-3 rounded-full mr-2" style="background-color: @(ViewBag.ProductServiceStatus == "Up" ? "green" : "red")"></div>
                    <span>@ViewBag.ProductServiceStatus</span>
                </div>
            </div>
            <div class="mt-4">
                <div class="text-gray-400">Last Checked: @ViewBag.ProductServiceLastChecked</div>
            </div>
        </div>
    </div>
</div>